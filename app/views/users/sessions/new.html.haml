.container
  .row{style: 'padding-top: 100px;'}
    .col-md-6.col-md-offset-3
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Iniciar Sesion
        .panel-body
          = form_for(resource, as: resource_name, url: session_path(resource_name),html: {role: "form", 'data-toggle': "validator"}) do |f|
            %fieldset
              = devise_error_messages!
              .form-group
                = f.label :email
                = f.email_field :email, class: 'form-control', autofocus: true, required: true,'data-error': "Debe introducir su correo"
                .help-block.with-errors
              .form-group
                = f.label :password
                = f.password_field :password, autocomplete: "off", class: 'form-control', required: true,'data-error': "Debe introducir su clave"
                .help-block.with-errors
              .actions
                = f.submit "Iniciar Sesion", class: "btn btn-success btn-block"
              .actions
                = render "users/shared/links"
