.container
  .row
    .col-md-6.col-md-offset-3
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Editar Usuario
        .panel-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            %fieldset
              = devise_error_messages!
              .form-group
                = f.label :email
                = f.email_field :email, class: 'form-control', autofocus: true
              .form-group
                = f.label :nombre
                = f.text_field :name, class: 'form-control', autofocus: true
              .form-group
                = f.label :apellido
                = f.text_field :last_name, class: 'form-control', autofocus: true
              .form-group
                = f.label :telefono
                = f.text_field :phone, class: 'form-control', autofocus: true
              .form-group
                = f.label :tipo_de_documento
                = f.text_field :document_type, class: 'form-control', autofocus: true
              .form-group
                = f.label :numero_de_documento
                = f.text_field :document_id, class: 'form-control', autofocus: true
              .form-group
                = f.label :clave
                %i (para actualizar la informacion introduzca su clave)
                %br/
                = f.password_field :current_password, autocomplete: "off", class: 'form-control'
              .actions
                = f.submit "Actualizar", class: "btn btn-success btn-block"
                = link_to "Atras", :back, class: "btn btn-default btn-block"

