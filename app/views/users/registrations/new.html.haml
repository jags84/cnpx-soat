.container
  .row
    .col-md-6.col-md-offset-3
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Sign Up
        .panel-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            %fieldset
              = devise_error_messages!
              .form-group
                = f.label :email
                = f.email_field :email, class: 'form-control', autofocus: true
              .form-group
                = f.label :nombre
                = f.text_field :name, class: 'form-control', autofocus: true
              .form-group
                = f.label :apellido
                = f.text_field :last_name, class: 'form-control', autofocus: true
              .form-group
                = f.label :telefono
                = f.text_field :phone, class: 'form-control', autofocus: true
              .form-group
                = f.label :tipo_de_documento
                = f.text_field :document_type, class: 'form-control', autofocus: true
              .form-group
                = f.label :numero_de_documento
                = f.text_field :document_id, class: 'form-control', autofocus: true
              .form-group
                = f.label :clave
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum)
                %br/
                = f.password_field :password, autocomplete: "off", class: 'form-control'
              .form-group
                = f.label :confirmacion_de_clave
                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
              .actions
                = f.submit "Registrarse", class: "btn btn-success btn-block"
              .actions
                = render "users/shared/links"
