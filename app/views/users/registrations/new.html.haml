.container
  .row
    .col-md-6.col-md-offset-3
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Regístrate
        .panel-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form", 'data-toggle': "validator"}) do |f|
            %fieldset
              = devise_error_messages!
              .form-group
                = f.label :correo
                = f.email_field :email, class: 'form-control', autofocus: true,required: true,'data-error': "Debe introducir su correo"
                .help-block.with-errors
              .form-group
                = f.label :nombre
                = f.text_field :name, class: 'form-control', autofocus: true,required: true,'data-error': "Debe introducir su Nombre"
                .help-block.with-errors
              .form-group
                = f.label :apellido
                = f.text_field :last_name, class: 'form-control', autofocus: true,required: true,'data-error': "Debe introducir su apellido"
                .help-block.with-errors
              .form-group
                = f.label :teléfono
                = f.text_field :phone, class: 'form-control', autofocus: true,required: true,'data-error': "Debe introducir su teléfono"
                .help-block.with-errors
              .form-group
                = f.label :tipo_de_documento
                = f.select :document_type, [['Cédula de ciudadanía','Cédula de ciudadanía'],['Cédula de extranjería','Cédula de extranjería'],['Pasaporte','Pasaporte'],['Tarjeta de identidad','Tarjeta de identidad'],['NIT','NIT']], {include_blank: true}, {required: true, class: 'form-control', 'data-error': "Debe seleccionar un tipo de documento"}
                .help-block.with-errors
              .form-group
                = f.label :número_de_documento
                = f.text_field :document_id, class: 'form-control', autofocus: true,required: true,'data-error': "Debe introducir su documento"
                .help-block.with-errors
              .form-group
                = f.label :clave
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} caracteres mínimos)
                %br/
                = f.password_field :password, autocomplete: "off", class: 'form-control',required: true,'data-error': "Debe introducir su clave", 'data-minlength': "6"
                .help-block.with-errors
              .form-group
                = f.label :confirmación_de_clave
                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control',required: true,'data-error': "Debe introducir la confirmacion de su clave",'data-match': "#user_password" , 'data-match-error': "Las claves no coinciden"
                .help-block.with-errors
              .actions
                = f.submit "Registrarse", class: "btn btn-success btn-block"
              .actions
                = render "users/shared/links"
