.container
  .row{style: 'padding-top: 100px;'}
    .col-md-6.col-md-offset-3
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title ¿Olvidó su clave?
        .panel-body
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,role: "form", 'data-toggle': "validator" }) do |f|
            %fieldset
              = devise_error_messages!
              .form-group
                = f.label :correo
                = f.email_field :email, autofocus: true, class: 'form-control', required: true,'data-error': "Debe introducir su correo"
                .help-block.with-errors
              .actions
                = f.submit "Enviarme las instrucciones", class: "btn btn-success btn-block"
            = render "users/shared/links"
