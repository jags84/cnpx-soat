.container
  .row{style: 'padding-top: 100px;'}
    .col-md-6.col-md-offset-3
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Iniciar Sesión
        .panel-body
          = form_for(:user, :url => session_path(:user),html: {role: "form", 'data-toggle': "validator"}) do |f|
            %fieldset
              .form-group
                = f.label :correo
                = f.email_field :email, class: 'form-control', required: true,'data-error': "Debe introducir su correo"
                .help-block.with-errors
              .form-group
                = f.label :clave
                = f.password_field :password, class: 'form-control', required: true,'data-error': "Debe introducir su clave"
                .help-block.with-errors
              .actions
                = f.submit 'Iniciar Sesión', class: "btn btn-success btn-block"
              = link_to "Regístrate", new_user_registration_path
              %br
              -# = link_to "¿Olvidó su clave?", new_password_path(:user)
