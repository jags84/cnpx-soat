= form_for [@policy,@payment] do |f|
  %fieldset
  - if @policy.payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@policy.payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @policy.payment.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :number_of_quotes
    = f.number_field :number_of_quotes, class: 'form-control'
  .form-group
    = f.label :credit_card_terminal
    = f.text_field :credit_card_terminal, class: 'form-control'
  .actions
    = f.submit 'Save', class: "btn btn-success btn-block"
